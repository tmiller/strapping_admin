<%= simple_form_for(@industry, html: { class: 'form-horizontal' }) do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Industries</legend>
    <%= f.input :name %>
    <%= f.input :color %>
    <div class="form-actions">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to 'Cancel', industries_path, class: 'btn' %>
    </div>
  </fieldset>
<% end %>
