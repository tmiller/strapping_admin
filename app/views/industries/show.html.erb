<h1>Industry</h1>
<p>
  <b>Name:</b>
  <%= @industry.name %>
</p>

<p>
  <b>Color:</b>
  <%= @industry.color %>
</p>


<div class="form-actions">
  <%= link_to 'Back', industries_path, class: 'btn' %>
  <%= link_to edit_industry_path(@industry), class: 'btn' do %>
    <i class="icon-pencil"></i> Edit
  <% end %>
  <%= link_to @industry, confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger' do %>
    <i class="icon-trash icon-white"></i> Delete
  <% end %>
</div>
